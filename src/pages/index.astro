---
import Layout from '../layouts/Layout.astro';

const packages = [
  {
    name: "Starter",
    sites: 1,
    price: "49",
    description: "Perfect for a single WordPress site",
    features: ["Daily backups", "Core & plugin updates", "Security monitoring", "Uptime monitoring", "Monthly reports", "Email support"],
    popular: false
  },
  {
    name: "Growth",
    sites: 3,
    price: "99",
    description: "Ideal for small businesses with multiple sites",
    features: ["Everything in Starter", "Priority updates", "Performance optimization", "Scheduled monthly reports", "Priority email support"],
    popular: true
  },
  {
    name: "Business",
    sites: 5,
    price: "149",
    description: "For agencies and growing businesses",
    features: ["Everything in Growth", "Staging environments", "Advanced security scans", "White-label monthly reports", "Phone support"],
    popular: false
  },
  {
    name: "Enterprise",
    sites: 10,
    price: "249",
    description: "Maximum coverage for large portfolios",
    features: ["Everything in Business", "Dedicated account manager", "Custom report scheduling", "Emergency support", "SLA guarantee"],
    popular: false
  }
];

const features = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" /></svg>`,
    title: "Daily Core Updates",
    description: "Automatic WordPress core updates applied daily to keep your site secure with the latest patches and improvements."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M14.25 6.087c0-.355.186-.676.401-.959.221-.29.349-.634.349-1.003 0-1.036-1.007-1.875-2.25-1.875s-2.25.84-2.25 1.875c0 .369.128.713.349 1.003.215.283.401.604.401.959v0a.64.64 0 0 1-.657.643 48.39 48.39 0 0 1-4.163-.3c.186 1.613.293 3.25.315 4.907a.656.656 0 0 1-.658.663v0c-.355 0-.676-.186-.959-.401a1.647 1.647 0 0 0-1.003-.349c-1.036 0-1.875 1.007-1.875 2.25s.84 2.25 1.875 2.25c.369 0 .713-.128 1.003-.349.283-.215.604-.401.959-.401v0c.31 0 .555.26.532.57a48.039 48.039 0 0 1-.642 5.056c1.518.19 3.058.309 4.616.354a.64.64 0 0 0 .657-.643v0c0-.355-.186-.676-.401-.959a1.647 1.647 0 0 1-.349-1.003c0-1.035 1.008-1.875 2.25-1.875 1.243 0 2.25.84 2.25 1.875 0 .369-.128.713-.349 1.003-.215.283-.4.604-.4.959v0c0 .333.277.599.61.58a48.1 48.1 0 0 0 5.427-.63 48.05 48.05 0 0 0 .582-4.717.532.532 0 0 0-.533-.57v0c-.355 0-.676.186-.959.401-.29.221-.634.349-1.003.349-1.035 0-1.875-1.007-1.875-2.25s.84-2.25 1.875-2.25c.37 0 .713.128 1.003.349.283.215.604.401.959.401v0a.656.656 0 0 0 .658-.663 48.422 48.422 0 0 0-.37-5.36c-1.886.342-3.81.574-5.766.689a.578.578 0 0 1-.61-.58v0Z" /></svg>`,
    title: "Plugin Updates",
    description: "All your plugins updated daily with compatibility checks to ensure nothing breaks on your live site."
  },
  {
