              <td class="py-4 px-4 text-center text-slate-600">Weekly</td>
            </tr>
            <tr class="hover:bg-slate-50">
              <td class="py-4 px-6 text-slate-700">International SEO</td>
              <td class="py-4 px-4 text-center"><svg class="w-5 h-5 text-slate-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg></td>
              <td class="py-4 px-4 text-center bg-purple-50/50"><svg class="w-5 h-5 text-slate-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg></td>
              <td class="py-4 px-4 text-center"><svg class="w-5 h-5 text-green-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Contact/CTA Section -->
